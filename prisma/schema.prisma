// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
  // url      = env("DATABASE_URL") // Change to "file:./dev.db" for local development with sqlite
}

model Talk {
  id              String   @id @default(uuid())
  createdAt       DateTime @default(now())
  title           String
  speaker         String
  description     String?
  longDescription String?
  year            Int
  tag             String?
  conference      String
  duration        Int?
  videoUrl        String?
  slides          String?
}
